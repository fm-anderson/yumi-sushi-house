---
import { Icon } from "astro-icon/components";
const icons = [
  { name: "instagram", href: "https://www.instagram.com/yumisushihouse/" },
  { name: "whatsapp", href: "https://wa.me/+19549345737" },
];
---

<header class="max-w-md bg-base-100">
  <div class="mx-auto max-w-7xl px-6">
    <div class="relative flex h-16 items-center justify-between">
      <div>
        <h1 class="text-xl font-bold">Yumi Sushi House</h1>
      </div>
      <div>
        <ul class="flex gap-4">
          {
            icons.map((item) => (
              <li>
                <a href={item.href} target="_blank">
                  <Icon name={item.name} class="text-2xl" />
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</header>
